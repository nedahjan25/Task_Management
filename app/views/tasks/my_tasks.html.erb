<!-- app/views/tasks/my_tasks.html.erb -->

<h1>Tasks</h1>

<div class="row">
  <div class="col-md-12">
    <% @tasks.each do |task| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= task.title %></h5>
          <p class="card-text"><strong>Status:</strong> <%= task.completed %></p>
          <%= link_to 'Show', task, class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
